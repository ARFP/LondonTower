<NavigationWindow x:Class="LondonTower.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
                Title="Tour de Londres" Icon="LondonTower.ico" Height="960" Width="1280" Source="./PageFolder/Identification.xaml"
                  MinHeight="960" MinWidth="1280">
    <NavigationWindow.Background>
        <LinearGradientBrush>
            <GradientStop Offset="0" Color="{StaticResource RadColShadow}"/>
            <GradientStop Offset="0.3" Color="{StaticResource RadColDarkBlue}"/>
            <GradientStop Offset="0.7" Color="{StaticResource RadColDarkBlue}"/>
            <GradientStop Offset="0.9" Color="{StaticResource RadColShadow}" />
        </LinearGradientBrush>
    </NavigationWindow.Background>
</NavigationWindow>
