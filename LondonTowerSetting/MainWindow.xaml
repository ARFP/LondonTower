<Window x:Class="LondonTowerSetting.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LondonTowerSetting"
        mc:Ignorable="d"
        Title="MainWindow" Height="320" Width="800"
        ResizeMode="NoResize"
        DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <Window.Background>
        <LinearGradientBrush>
            <GradientStop Offset="0" Color="#FF2A3132"/>
            <GradientStop Offset="0.3" Color="#FF336B87"/>
            <GradientStop Offset="0.7" Color="#FF336B87"/>
            <GradientStop Offset="0.9" Color="#FF2A3132" />
        </LinearGradientBrush>
    </Window.Background>
    <StackPanel>
        <TextBlock Text="SETTING" FontSize="48" HorizontalAlignment="Center" FontWeight="Bold"/>
        <StackPanel Name="GridFond" Margin="0,40,0,0">
          
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="300"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="90"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Dossier de sauvegarde" FontSize="18" HorizontalAlignment="Center" FontWeight="Bold"/>
                <TextBox Grid.Column="1" FontSize="18" Text="{Binding FirstSaveFolder, UpdateSourceTrigger=PropertyChanged}"/>
                <Button Name="FirstSaveBut" Grid.Column="2" HorizontalAlignment="Center" Content="Parcourir" Padding="5" Click="Browse_Onclick"/>
                </Grid>

            <Grid Margin="0,30,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="90"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="Dossier de sauvegarde de secours" FontSize="18" HorizontalAlignment="Center" FontWeight="Bold"/>
                <TextBox Grid.Column="1" FontSize="18"  FontWeight="Bold" MinWidth="120" Text="{Binding SecondeSaveFolder, UpdateSourceTrigger=PropertyChanged}"/>
                <Button Name="SecondSaveBut" Grid.Column="2" HorizontalAlignment="Center" Content="Parcourir" Padding="5" Click="Browse_Onclick"/>
            </Grid>
        </StackPanel>
        <StackPanel Margin="0,50,0,0" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button VerticalAlignment="Bottom" Padding="5" Content="Sauvegarder" Click="Save_Onclick"/>
        <Button VerticalAlignment="Bottom" Margin="50,0,0,0" Padding="5" Content="Annuler" Click="Leave_Onclick"/>
        </StackPanel>
    </StackPanel>
</Window>
